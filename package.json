{
  "name": "saucedemo-automation",
  "version": "1.0.0",
  "type": "module",
  "description": "Playwright test automation framework for SauceDemo",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "test:login": "playwright test login.spec.ts",
    "test:checkout:complete-flow": "playwright test checkoutComplete.spec.ts --grep \"Complete Order Flow\"",
    "test:chrome": "playwright test --project=chromium",
    "test:firefox": "playwright test --project=firefox",
    "test:webkit": "playwright test --project=webkit",
    "test:all-browsers": "playwright test --project=chromium --project=firefox --project=webkit",
    "test:failed": "playwright test --last-failed",
    "test:parallel": "playwright test --workers=4",
    "report": "playwright show-report",
    "codegen": "playwright codegen https://www.saucedemo.com",
    "install:browsers": "playwright install --with-deps"
  },
  "keywords": [
    "playwright",
    "typescript",
    "automation",
    "testing",
    "saucedemo"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.48.0",
    "@types/node": "^22.10.1",
    "typescript": "^5.7.2"
  }
}