{
  "name": "saucedemo-automation",
  "version": "1.0.0",
  "type": "module",
  "description": "Playwright test automation framework for SauceDemo",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "test:login": "playwright test login.spec.ts",
    "test:inventory": "playwright test inventory.spec.ts",
    "test:cart": "playwright test cart.spec.ts",
    "test:product-detail": "playwright test productDetail.spec.ts",
    "test:checkout-step-one": "playwright test checkoutStepOne.spec.ts",
    "test:checkout-step-two": "playwright test checkoutStepTwo.spec.ts",
    "test:checkout-complete": "playwright test checkoutComplete.spec.ts",
    "test:checkout": "playwright test checkoutStepOne.spec.ts checkoutStepTwo.spec.ts checkoutComplete.spec.ts",
    "test:login:positive": "playwright test login.spec.ts --grep \"Positive Scenarios\"",
    "test:login:negative": "playwright test login.spec.ts --grep \"Negative Scenarios\"",
    "test:login:security": "playwright test login.spec.ts --grep \"Security Scenarios\"",
    "test:inventory:display": "playwright test inventory.spec.ts --grep \"Page Load\"",
    "test:inventory:sorting": "playwright test inventory.spec.ts --grep \"Product Sorting\"",
    "test:inventory:cart": "playwright test inventory.spec.ts --grep \"Cart\"",
    "test:inventory:navigation": "playwright test inventory.spec.ts --grep \"Navigation\"",
    "test:inventory:menu": "playwright test inventory.spec.ts --grep \"Hamburger Menu\"",
    "test:cart:display": "playwright test cart.spec.ts --grep \"Display\"",
    "test:cart:remove": "playwright test cart.spec.ts --grep \"Remove Items\"",
    "test:cart:checkout": "playwright test cart.spec.ts --grep \"Checkout\"",
    "test:cart:calculations": "playwright test cart.spec.ts --grep \"Calculations\"",
    "test:product-detail:navigation": "playwright test productDetail.spec.ts --grep \"Navigation\"",
    "test:product-detail:add": "playwright test productDetail.spec.ts --grep \"Add to Cart\"",
    "test:product-detail:info": "playwright test productDetail.spec.ts --grep \"Information Display\"",
    "test:checkout:form": "playwright test checkoutStepOne.spec.ts --grep \"Form Validation\"",
    "test:checkout:calculations": "playwright test checkoutStepTwo.spec.ts --grep \"Price Calculations\"",
    "test:checkout:complete-flow": "playwright test checkoutComplete.spec.ts --grep \"Complete Order Flow\"",
    "test:chrome": "playwright test --project=chromium",
    "test:firefox": "playwright test --project=firefox",
    "test:webkit": "playwright test --project=webkit",
    "test:all-browsers": "playwright test --project=chromium --project=firefox --project=webkit",
    "test:failed": "playwright test --last-failed",
    "test:parallel": "playwright test --workers=4",
    "report": "playwright show-report",
    "codegen": "playwright codegen https://www.saucedemo.com",
    "install:browsers": "playwright install --with-deps"
  },
  "keywords": [
    "playwright",
    "typescript",
    "automation",
    "testing",
    "saucedemo"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.48.0",
    "@types/node": "^22.10.1",
    "typescript": "^5.7.2"
  }
}